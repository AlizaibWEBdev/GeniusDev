    font-weight: 500;
    color: #333; /* Adjust text color for better readability */
}

.additional-content ul {
    list-style-type: disc;
    padding-left: 20px; /* Adjust padding for better list visibility */
}

</style>
<body>
    <%- include('partials/header') %>
    
    <div class="center">
        <div class="minifier-container">
            <div class="text-heading">
                <h1>JavaScript Minifier</h1>
                <h2>Efficiently Minify Your JavaScript Code Online</h2>
            </div>
            <div class="input-center">
                <div class="input">
                    <textarea id="jsInput" placeholder="Paste your JavaScript code here..."></textarea>
                    <button id="minifyJsBtn">Minify</button>
                </div>
                <textarea id="jsOutput" placeholder="Minified JavaScript code will appear here..." readonly></textarea>
            </div>
        </div>
    </div>

    <br>
    <br>

    <!-- New content added here -->
    <section class="additional-content">
        <div class="new-text-heading">
            <h2>Why Use a JavaScript Minifier?</h2>
            <p>Our JavaScript Minifier tool helps you compress your JavaScript code to reduce file size and improve website performance. By removing unnecessary spaces, comments, and line breaks, our tool enhances your code's efficiency and load time.</p>
        </div>
        <div class="new-additional-info">
            <h3>Benefits of JavaScript Minification</h3>
            <ul>
                <li>Reduce JavaScript file size for faster page loads.</li>
                <li>Minify JavaScript, CSS, and HTML for comprehensive optimization.</li>
                <li>Compress JavaScript code online with ease.</li>
                <li>Improve website speed and user experience.</li>
            </ul>
        </div>
    </section>

    <br>
    <br>

    
    <%- include('partials/footer') %>
</body>

<script>
    document.getElementById('minifyJsBtn').addEventListener('click', function () {
        const jsInput = document.getElementById('jsInput').value;
        const minifiedJs = jsInput
            .replace(/\s+/g, ' ') 
            .replace(/\s*{\s*/g, '{') 
            .replace(/\s*}\s*/g, '}') 
            .replace(/\s*:\s*/g, ':') 
            .replace(/\s*;\s*/g, ';') 
            .replace(/;\s*}/g, '}')   
            .replace(/\/\*.*?\*\//g, '') 
            .replace(/\/\/.*(?=[\n\r])/g, ''); 
        document.getElementById('jsOutput').value = minifiedJs;
    });
</script>

</html>
