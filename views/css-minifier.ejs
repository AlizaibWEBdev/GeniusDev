<body>
    <%- include('partials/header') %>
   
    <div class="center">
        <div class="minifier-container">
            <div class="text-heading">
                <h1>CSS Minifier</h1>
                <h2>Efficiently Minify Your CSS Code Online</h2>
            </div>
            <div class="input-center">
                <div class="input">
                    <textarea id="cssInput" placeholder="Paste your CSS code here..."></textarea>
                    <button id="minifyCssBtn">Minify</button>
                </div>
                <textarea id="cssOutput" placeholder="Minified CSS code will appear here..." readonly></textarea>
